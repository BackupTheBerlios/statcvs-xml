    <unitTestSourceDirectory>test-src</unitTestSourceDirectory>

    <unitTest>
      <includes>
        <include>**/*Test.java</include>
      </includes>
    </unitTest>
  	
  	<resources>
      <resource>
        <directory>${basedir}/src/net/sf/statcvs/resources</directory>

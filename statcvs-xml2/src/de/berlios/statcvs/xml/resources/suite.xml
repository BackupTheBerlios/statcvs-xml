<suite>
  <settings>
    <width>640</width>
    <height>480</height>
    <modules type="map">
      <Report>**/report/*</Report>
      <Output>**/output/*</Output>
      <XNap_1.x>xnap/**</XNap_1.x>
      <XNap_2.x>xnap2/**</XNap_2.x>
      <XNap_3.x>xnap3/**</XNap_3.x>
    </modules>
    <tags>test1</tags>
  </settings>

  <document  filename="test" title="Test">
    <report class="LocByObjectChart" forall="author" filename="loc_authors.png"/>
    <report class="LocByObjectChart" forall="directory" filename="loc_directories.png"/>
  </document>

  <document  filename="author%1" title="Author Statistics%1" foreach="author">
    <report class="LocByAuthorChart"/>
    <report class="ModuleSizesChart"/>
    <report class="ActivityByDayChart"/>        
    <report class="ActivityByHourChart"/>        
  </document>

  <document  filename="directory%1" title="Directory Statistics%1" foreach="directory">
    <report class="LocChart"/>
    <report class="AuthorsTable"/>
  </document>

  <document  filename="recent_activity" title="Recent Activity">
    <settings>
      <revisionFilter>util.atMostDaysOld(rev.getDate(), 1)</revisionFilter> 
    </settings>
    <report class="AuthorsTable"/>
    <report class="FileActivityTable"/>
    <report class="LocChart" filename="recent_loc.png"/>
  </document>

  <document  filename="authors" title="Author Statistics">
    <report class="LocByAuthorChart" filename="loc_per_author.png"/>
    <report class="ActivityByDayChart"/>    
    <report class="ActivityByHourChart"/>
    <report class="AuthorsActivityChart"/>
  </document>

  <document  filename="file_stats" title="File Statistics">
    <report class="FileCountChart"/>    
    <report class="AvgFileSizeChart"/>
    <report class="SizePerFileTable"/>
    <report class="AuthorsPerFileTable"/>
    <report class="RevisionsPerFileTable"/>
  </document>
  
  <document  filename="module_stats" title="Module Statistics">
    <report class="ModuleSizesChart"/>
    <report class="LocByModuleChart"/>
  </document>
    
  <document filename="index" title="CVS Statistics">
    <report class="DocumentTable"/>
    <report class="LocChart"/>
    <report class="AuthorsTable"/>
    <report class="DirectoryTree"/>
  </document>

</suite>

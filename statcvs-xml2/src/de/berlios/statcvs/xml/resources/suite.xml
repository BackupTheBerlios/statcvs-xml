<suite>
  <settings>
    <width>640</width>
    <height>480</height>
    <modules type="map">
      <Report>**/report/*</Report>
      <Output>**/output/*</Output>
    </modules>
  </settings>

  <document filename="index">
    <report class="LocChart"/>
    <report class="AuthorsTable"/>
    <report class="FileCountChart"/>    
    <report class="AvgFileSizeChart"/>    
    <report class="ActivityByDayChart"/>    
    <report class="ActivityByHourChart"/>
    <report class="ModuleSizesChart"/>
  </document>

  <document  filename="author%1" foreach="author">
    <report class="LocChart"/>
    <report class="ActivityByDayChart"/>        
    <report class="ActivityByHourChart"/>        
    <report class="ModuleSizesChart"/>
  </document>
</suite>
